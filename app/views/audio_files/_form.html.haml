= simple_form_for( @audio_file, :html => { :multipart => true}, :defaults => { :input_html => { :class => "form-control" } }) do |f|
  - if @audio_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@audio_file.errors.count, "error")} prohibited this audio_file from being saved:"
      %ul
        - @audio_file.errors.full_messages.each do |msg|
          %li= msg

  .row
    .form-group
      = f.input :title
    .form-group
      = f.input :description, as: :text
    .form-group
      -if @audio_file.audio_attachment.nil?
        = f.input :audio_attachment
      -else
        = link_to "#{@audio_file.title} - File", @audio_file.audio_attachment.url
        %label Delete Attachment
        %input{ name: "delete_attachment", type: "checkbox"}
    .form-group
      = f.input :tag_list, input_html: { class: "tags_field form-control", autocomplete: "off" }
  .row
    .actions
      = f.submit 'Save', :class => "btn btn-success"
